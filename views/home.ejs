<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=account_circle" />
  <link rel="stylesheet" type="text/css" href="/css/headerStyle.css">
  <link rel="stylesheet" type="text/css" href="/css/imageStyle.css">
  <title>Home Page</title>
  <style>
    *{
      /* outline: 1px solid red; */
    }
    body{
      min-height: 100vh;
      background: linear-gradient(to bottom, #dee9ff, #FFFFFF);
    }
    .seemore{
      color: rgb(0, 0, 145);
      transition: all 0.3s ease-in-out;
    }
    .seemore:hover{
      color: black;
    }
    .message{
      font-size: 1.4rem;
      width: 100%;
      font-family: 'Poppins',sans-serif;
    }
    .copyright{
      background-color: rgb(146, 146, 146);
      color: white;
      font-family: 'Roboto',sans-serif;
      font-size: 1rem;
      padding: 0.25rem;
      text-align: center;
    }
    .contact_form{
      width: 90vw;
      margin: 0 auto;
      display: flex;
      border-radius: 10px;
      box-shadow: 0px 2px 10px rgb(96, 96, 96);
    }
    .contact_form form{
      width: 60%;
      border-top-left-radius: 10px;
      border-bottom-left-radius: 10px;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 3rem 0;
      gap: 1rem;
      font-size: 1rem;
      background-color: rgb(246, 246, 246);
      font-family: 'Poppins',sans-serif;
    }
    .contact_form input:focus , textarea:focus{
      outline: 0;
    }
    .contact_form p{
      font-size: 2rem;
      color: rgb(0, 0, 93);
      font-family: 'Poppins',sans-serif;
    }
    .contact_form input[type='text'], input[type='email'], textarea{
      min-width: 350px;
      background-color: rgb(246, 246, 246);
      padding: 0.2rem 0;
      font-size: 1rem;
      color: rgb(0, 0, 100);
      border: 0;
      border-bottom: 2px solid rgb(207, 6, 6);
    }
    .contact_form input[type='submit']{
      color: rgb(246, 244, 244);
      padding: 0.2rem 0.4rem;
      background-color: rgb(29, 29, 29);
      border: 1px solid black;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s ease-in-out;
    }
    .messageField{
      height: 100px;
      font-family: 'Poppins',sans-serif;
    }
    input[type='submit']:hover{
      color: black;
      background-color: white;
    }
    .contact{
      display: flex;
      flex-direction: column;
      gap: 2rem;
      padding: 3rem 2rem;
    }
    .contact h1{
      font-family: 'Poppins',sans-serif;
      font-size: 2rem;
      font-weight: 500;
    }
    .phone , .email , .address{
      display: flex;
      gap: 1rem;
      align-items: center;
    }
    .phone img{
      height: 1.5rem;
      border: 1px solid rgb(48, 48, 48);
      border-radius: 1rem;
      padding: 0.2rem;
    }
    .email img{
      height: 1.8rem;
    }
    .firstDiv{
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    .address img{
      height: 1.5rem;
      border: 1px solid rgb(48, 48, 48);
      border-radius: 1rem;
      padding: 0.2rem;
    }
    .messageResponse{
      text-align: center;
      color: red;
      font-size: 1rem;
    }

    @media (max-width:875px) {
      .contact_form input[type='text'], input[type='email'], textarea{
        min-width: 300px;
      }
    }
    @media (max-width:775px) {
      .contact_form input[type='text'], input[type='email'], textarea{
        min-width: 350px;
      }
      .contact_form{
        flex-direction: column;
        box-shadow: 0px 2px 8px rgb(145, 145, 145);
      }
      .contact_form form{
        width: 100%;
        border-bottom-left-radius: 0;
        border-top-right-radius: 10px;
      }
    }
    @media (max-width:475px) {
      .contact_form input[type='text'], input[type='email'], textarea{
        min-width: 290px;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <div class="front_Image">
    <img src="/images/frontImage.jpg">
    <div class="content">
      <p>"Your Next Favorite Recipe Starts Here"</p>
      <p>"Cook Like a Pro!"</p>
    </div>
  </div>
  <br><br>
  <div class="categories-container">
    <div class="indian">
      <h2>Indian</h2>
      <div class="content-container">
        <div class="scroll-container">
          <div class="scroll-button">
            <button id="scroll-left">⬅</button>
            <button id="scroll-right">➡</button>
          </div>
          <% if (recipeIndian && recipeIndian.length > 0) { %>
            <% recipeIndian.forEach(recipe => { %>
              <div>
                <div class="image" style="width: auto;">
                  <div class="image-box">
                    <img src="/image/<%= recipe._id %>" alt="<%= recipe.title %>">
                  </div>
                  <div>
                    <p><%= recipe.title %></p>
                    <a href="/view/<%= recipe._id %>" class="seemore">See more</a>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div id="message">No Dishes Available.</div>
          <% } %>
        </div>        
      </div>
    </div>
    <br><br><br><br>
    <div class="indian">
      <h2>American</h2>
      <div class="content-container">
        <div class="scroll-container">
          <div class="scroll-button">
            <button id="scroll-left">⬅</button>
            <button id="scroll-right">➡</button>
          </div>
          <% if (recipeAmerican && recipeAmerican.length > 0) { %>
            <% recipeAmerican.forEach(recipe => { %>
              <div>
                <div class="image">
                  <div class="image-box">
                    <img src="/image/<%= recipe._id %>" alt="<%= recipe.title %>">
                  </div>
                  <div>
                    <p><%= recipe.title %></p>
                    <a href="/view/<%= recipe._id %>" class="seemore">See more</a>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="message">No Dishes Available.</div>
          <% } %>
        </div>      
      </div>
      </div>
      <br><br><br><br>
    <div class="indian">
      <h2>Chinese</h2>
      <div class="content-container">
        <div class="scroll-container">
          <div class="scroll-button">
            <button id="scroll-left">⬅</button>
            <button id="scroll-right">➡</button>
          </div>
          <% if (recipeChinese && recipeChinese.length > 0) { %>
            <% recipeChinese.forEach(recipe => { %>
              <div>
                <div class="image">
                  <div class="image-box">
                    <img src="/image/<%= recipe._id %>" alt="<%= recipe.title %>">
                  </div>
                  <div>
                    <p><%= recipe.title %></p>
